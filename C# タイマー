using System;
using System.Threading;

namespace ConsoleApp2
{
    class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("タイマーをセットしてください");

            int ansTimer = int.Parse(Console.ReadLine());

            for(int x=-1; x<=ansTimer; x++)
            {
                if (x >= 0)
                {
                    Console.WriteLine(x);

                    Thread.Sleep(1000);
                    Console.Clear();
                }
                else
                {
                    Console.Clear();
                }
            }
           

                
               

            

        }
    }
}
